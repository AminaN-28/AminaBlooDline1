<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/nomUser"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:layout_marginLeft="18dp"
            android:layout_toRightOf="@+id/imageView"
            android:fontFamily="casual"
            android:text="@string/nomUser"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/alertUser"
            android:layout_width="264dp"
            android:layout_height="62dp"
            android:layout_below="@+id/nomUser"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@+id/imageView"
            android:text="@string/alertUser"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/date"
            android:layout_width="127dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/nomUser"
            android:layout_toRightOf="@+id/nomUser"
            android:text="@string/alertDate"
            tools:ignore="NotSibling"
            android:textAlignment="center"
            android:textColor="@color/black"/>


    </RelativeLayout>




</RelativeLayout>